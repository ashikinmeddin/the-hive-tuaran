<div class="container-fluid">
  <div class="content">
    <div class="row">
      <div class="col-2 sidebar">
      </div>
      <div class="col-8 main-content">
        <div class="header">
        <h1>Profile Setting</h1>
        </div>
        <div class="list-container">
          <div class="row">
            <div class='user-setting-form'>
              <%= form_with(model: @user) do |f| %>
                <%= render 'shared/form_error', object: @user %>
                <%= f.label :avatar %>
                <%= f.file_field :avatar %>
                <%= f.submit 'save' %>
                <%= link_to 'Delete your account', users_path, :method => :delete %>
              <% end %>
            </div>
        </div>
      </div>
      <div class="col-2 sidebar">
      </div>
    </div>
  </div>
</div>
